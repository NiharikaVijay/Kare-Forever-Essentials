{% extends "template.twig" %}

{% block title %}Admin | Carousel List{% endblock %}
{% block content %}
<div class="row">
    {% for image in images %}
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">{{image[4]}}. {{image[0]}}</h4>
            </div>
            <img class="card-img-top" src="{{image[1]}}" alt="Card image cap">

            <div class="card-body">
                <p class="card-text">
                    <strong>Tagline: </strong>{{image[2]}}<br>
                    <strong>Link: </strong>{{image[3]}}
                </p>
            </div>
            <div class="modal center-modal fade" id="modal-center-{{image[0]}}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Are you sure you want to delete this image?</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer modal-footer-uniform">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <a href="carousel_delete.php?carid={{image[0]}}"><button type="button"
                                    class="btn btn-primary float-right">Delete</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer justify-content-between d-flex">
                <!-- <span class="text-muted">Last updated 3 mins ago</span> -->
                <ul class="list-inline mb-0">
                    <li><a href="#" data-toggle="modal" data-target="#modal-center-{{image[0]}}">Delete</a></li>
                </ul>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
</div>
{% endblock %}