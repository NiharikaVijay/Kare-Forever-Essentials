{% extends "template.twig" %}

{% block title %}Admin | Customer Details{% endblock %}
{% block content %}
<section class="content"><br>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xl-4 col-md-4">
                            <!-- Widget: user widget style 1 -->
                            <div class="box box-widget widget-user-2">
                                <!-- Add the bg color to the header using any of the bg-* classes -->
                                <div class="widget-user-header bg-primary">
                                    <div class="widget-user-image">
                                        <img class="rounded-circle bg-success-light"
                                            src="/admin/images/avatar/avatar-5.png" alt="User Avatar">
                                    </div>
                                    <!-- /.widget-user-image -->
                                    <h3 class="widget-user-username">{{details[0]}}</h3>
                                    <h6 class="widget-user-desc">{{details[1]}} | {{details[2]}}</h6>
                                </div>
                                <div class="box-footer no-padding">
                                    <ul class="nav d-block nav-stacked">
                                        <li class="nav-item"><a href="#" class="nav-link">Orders placed
                                                <span
                                                    class="pull-right badge bg-info-light"><b>{{details[3]}}</b></span></a>
                                        </li>
                                        <li class="nav-item"><a href="#" class="nav-link">Items in cart <span
                                                    class="pull-right badge bg-success-light"><b>{{details[4]}}</b></span></a>
                                        </li>
                                        <li class="nav-item"><a href="#" class="nav-link">Items in wishlist
                                                <span
                                                    class="pull-right badge bg-warning-light"><b>{{details[5]}}</b></span></a>
                                        </li>
                                        <li class="nav-item"><a href="#" class="nav-link">Revenue
                                                <span
                                                    class="pull-right badge bg-danger-light"><b>₹{{details[6]}}</b></span></a>
                                        </li>
                                        <li class="nav-item"><a href="#" class="nav-link">Loyalty Points
                                                <span
                                                    class="pull-right badge bg-info-light"><b>{{details[7]}}</b></span></a>
                                        </li>
                                        <li class="nav-item"><a href="#" class="nav-link">Referral Code
                                                <span class="pull-right"><b>{{details[8]}}</b></span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="box">
                                <div class="box-body px-0">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="table-responsive rounded card-table">
                                            <table class="table border-no" id="example1">
                                                <h4>Orders</h4>
                                                <thead>
                                                    <tr>
                                                        <th>Order ID</th>
                                                        <th>Date</th>
                                                        <th>Location</th>
                                                        <th>Amount</th>
                                                        <th>Status Order</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for order in orders %}
                                                    <tr class="hover-primary">
                                                        <td>{{order[0]}}</td>
                                                        <td>{{order[1]}}</td>
                                                        <td>{{order[2]}}, {{order[3]}}, {{order[4]}}-{{order[5]}},
                                                            {{order[6]}}</td>
                                                        <td>₹{{order[7]}}</td>
                                                        {% if order[8] == 'Placed' %}
                                                        <td>
                                                            <span
                                                                class="badge badge-pill badge-danger-light">Placed</span>
                                                        </td>
                                                        {% elseif order[8] == 'Accepted' %}
                                                        <td>
                                                            <span
                                                                class="badge badge-pill badge-info-light">Accepted</span>
                                                        </td>
                                                        {% elseif order[8] == 'Out' %}
                                                        <td>
                                                            <span class="badge badge-pill badge-warning-light">Our for
                                                                Delivery</span>
                                                        </td>
                                                        {% elseif order[8] == 'Delivered' %}
                                                        <td>
                                                            <span
                                                                class="badge badge-pill badge-success-light">Delivered</span>
                                                        </td>
                                                        {% else %}
                                                        <td>
                                                            <span
                                                                class="badge badge-pill badge-primary-light">Cancelled</span>
                                                        </td>
                                                        {% endif %}
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="order_details.php?ordid={{order[0]}}">
                                                                    <button type="button"
                                                                        class="waves-effect waves-light btn btn-primary">View</button></a>
                                                                <div class="btn-group">
                                                                    <button type="button"
                                                                        class="waves-effect waves-light btn btn-primary dropdown-toggle"
                                                                        data-toggle="dropdown">
                                                                    </button>
                                                                    <div class="dropdown-menu">
                                                                        <a class="dropdown-item"
                                                                            href="order_update.php?status=acp&ordid={{order[0]}}">Accepted</a>
                                                                        <a class="dropdown-item"
                                                                            href="order_update.php?status=ofd&ordid={{order[0]}}">Out
                                                                            for Delivery</a>
                                                                        <a class="dropdown-item"
                                                                            href="order_update.php?status=dvd&ordid={{order[0]}}">Delivered</a>
                                                                        <a class="dropdown-item"
                                                                            href="order_update.php?status=can&ordid={{order[0]}}">Cancelled</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="box">
                                <div class="box-body px-0">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="table-responsive rounded card-table">
                                            <table class="table border-no" id="example1">
                                                <h4>Wishlist</h4>
                                                <thead>
                                                    <tr>
                                                        <th>Item</th>
                                                        <th>Product Info</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% if wishlist %}
                                                    {% for product in wishlist %}
                                                    <tr class="hover-primary">
                                                        <td><img src={{product[0]}} alt="" width="80"></td>
                                                        <td>
                                                            <h4>{{product[1]}}</h4>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                    {% else %}
                                                    <tr>
                                                        <td></td>
                                                        <td>No items in Wishlist</td>
                                                    </tr>
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box">
                                <div class="box-body px-0">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="table-responsive rounded card-table">
                                            <table class="table border-no" id="example1">
                                                <h4>Cart</h4>
                                                <thead>
                                                    <tr>
                                                        <th>Item</th>
                                                        <th>Product Info</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Total</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% if cart %}
                                                    {% for product in cart %}
                                                    <tr class="hover-primary">
                                                        <td><img src={{product[0]}} alt="" width="80"></td>
                                                        <td>
                                                            <h4>{{product[1]}}</h4>
                                                            <h6>{{product[2]}}</h6>
                                                        </td>
                                                        {% if product[2]=="30mL" %}
                                                        <td>₹{{product[3]}}</td>
                                                        {% elseif product[2]=="50mL" %}
                                                        <td>₹{{product[4]}}</td>
                                                        {% elseif product[2]=="100mL" %}
                                                        <td>₹{{product[5]}}</td>
                                                        {% elseif product[2]=="250mL" %}
                                                        <td>₹{{product[6]}}</td>
                                                        {% endif %}
                                                        <td>{{product[7]}}</td>
                                                        {% if product[2]=="30mL" %}
                                                        <td><strong>₹{{product[3] * product[7]}}</strong></td>
                                                        {% elseif product[2]=="50mL" %}
                                                        <td><strong>₹{{product[4] * product[7]}}</strong></td>
                                                        {% elseif product[2]=="100mL" %}
                                                        <td><strong>₹{{product[5] * product[7]}}</strong></td>
                                                        {% elseif product[2]=="250mL" %}
                                                        <td><strong>₹{{product[6] * product[7]}}</strong></td>
                                                        {% endif %}
                                                    </tr>
                                                    {% endfor %}
                                                    {% else %}
                                                    <tr>
                                                        <td></td>
                                                        <td>No items in cart</td>
                                                    </tr>
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
{% endblock %}