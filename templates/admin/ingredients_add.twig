{% extends "template.twig" %}

{% block title %}Admin | Add Ingredient{% endblock %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="box">
            <div class="box-body">
                <form action="ingredients_add.php" method="POST" enctype="multipart/form-data">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="Name" name="name" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea rows="5" cols="5" class="form-control" placeholder="Enter description"
                                        name="description" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ingredient image</label>
                                    <div class="product-img text-left">
                                        <div class="btn btn-light mb-20">
                                            <input type="file" class="upload form-control" required name="image"
                                                required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions mt-10">
                            <center><button type="submit" class="btn btn-primary"> <i class="fa fa-check"></i>Add
                                    Ingredient</button></center>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}