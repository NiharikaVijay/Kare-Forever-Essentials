{% extends "template.twig" %}

{% block title %}Admin | Ingredients List{% endblock %}
{% block content %}
<div class="row">
    {% for ing in ings %}
    <div class="col-md-12 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Ingredient ID: {{ing[0]}}</h4>
            </div>
            <img class="card-img-top" src="{{ing[1]}}" alt="Card image cap">

            <div class="card-body">
                <strong>
                    <h4>{{ing[2]}}</h4>
                </strong>
                <p class="card-text">{{ing[3]}} </p>
            </div>
            <div class="modal center-modal fade" id="modal-center-{{ing[0]}}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Are you sure you want to delete this ingredient?</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer modal-footer-uniform">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <a href="ingredients_delete.php?ingid={{ing[0]}}"><button type="button"
                                    class="btn btn-primary float-right">Delete</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer justify-content-between d-flex">
                <!-- <span class="text-muted">Last updated 3 mins ago</span> -->
                <ul class="list-inline mb-0">
                    <li><a href="#" data-toggle="modal" data-target="#modal-center-{{ing[0]}}">Delete</a></li>
                </ul>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
</div>
{% endblock %}