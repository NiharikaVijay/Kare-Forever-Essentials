                                                <button type="submit" form="wishlist-form-{{prod[1]}}">
                                                    <span><i class="ion-ios-heart"></i></span></button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}

