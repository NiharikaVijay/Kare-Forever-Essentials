                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc">₹{{prod[6]}}</span><span
                                                    class="price-sale">₹{{prod[10]}}</span></p>
                                        </div>
                                    </div>
                                    {% else %}
                                    <div class="d-flex">
                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc">₹{{prod[7]}}</span><span
                                                    class="price-sale">₹{{prod[11]}}</span></p>
                                        </div>
