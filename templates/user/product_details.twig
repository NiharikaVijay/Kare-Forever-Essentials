                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- <p><b>INGREDIENTS:</b>&ensp;{{details[3]}}</p> -->
                            <p><b>APPLICATION:</b>&ensp;{{details[5]}}</p>
                            <div class="row mt-4">
                                <div class="col-md-6">
                                    <div class="form-group d-flex">
                                        <div class="select-wrap">
                                            {% if details[11] %}
                                            <button class="btn btn-qty"
                                                onclick="changePrice('{{details[11]}}')">30ml</button>
                                            {% endif %}
                                            {% if details[12] %}
                                            <button class="btn btn-qty"
                                                onclick="changePrice('{{details[12]}}')">50ml</button>
                                            {% endif %}
                                            {% if details[13] %}
                                            <button class="btn btn-qty"
                                                onclick="changePrice('{{details[13]}}')">100ml</button>
                                            {% endif %}
                                            {% if details[14] %}
                                            <button class="btn btn-qty"
