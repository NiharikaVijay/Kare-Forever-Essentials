                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc">₹{{prod[5]}}</span><span
                                                    class="price-sale">₹{{prod[9]}}</span></p>
                                        </div>
                                    </div>
                                    {% elseif prod[6]>0 %}
                                    <div class="d-flex">
                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc">₹{{prod[6]}}</span><span
                                                    class="price-sale">₹{{prod[10]}}</span></p>
                                        </div>
                                    </div>
                                    {% else %}
