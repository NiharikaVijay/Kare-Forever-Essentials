{% extends 'template.twig' %}

{% block content %}
<div class="modal" id="cart-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h6 style="color:white;" class="modal-title">Moving to your cart</h6>
        </div>
        <div class="modal-body">
            <form action="cart_add.php" method="POST" id="cart-form" class="billing-form">
                <input name="pdid" type="hidden" value="{{details[3]}}">
                <h3 class="mb-4 billing-heading">{{details[0]}}</h3>
                <div class="row align-items-end">
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label for="country">Volume</label>
                            <div class="select-wrap">
                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                <select id="volume" name="volume" class="form-control">
                                    {% if details[14] %}
                                    <option value="30ml">30ml</option>
                                    {% endif %}
                                    {% if details[15] %}
                                    <option value="50ml">50ml</option>
                                    {% endif %}
                                    {% if details[16] %}
                                    <option value="100ml">100ml</option>
                                    {% endif %}
                                    {% if details[17] %}
                                    <option value="250ml">250ml</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>
                    {# <div class="w-100"></div> #}
                    <div class="col-xl-6">
                        <label for="cart-quantity">Quantity</label><br>
                        <div class="input-group xl-6">
                            <button type="button" class="quantity-left-minus btn" data-type="minus" data-field=""
                                onclick="qtyDec()">
                                <i class="ion-ios-remove"></i>
                            </button>
                            <input type="text" id="cart-quantity" name="qty" class="quantity form-control input-number"
                                value=1>
                            <button type="button" class="quantity-right-plus btn" data-type="plus" data-field=""
                                onclick="qtyInc()">
                                <i class="ion-ios-add"></i>
                            </button>
                        </div>
                    </div>
                    <div class="w-100"></div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn border" data-dismiss="modal">
                Cancel
            </button>
            <button type="submit" form="cart-form" class="btn bg-primary right-content" style="color:white;">Move
            </button>
        </div>
    </div>
</div>

<div class="Container">
    <div class="ProductMeta">
        <div class="custom_reviews">
            <section class="ftco-section">
                <div class="container">
                    <div class="row">
                        <div class=" slideshow-container col-lg-6 mb-5 ftco-animate">
                            {% for img in media %}
                            <div class="mySlides fade">
                                <a href="{{img[0]}}" class="image-popup"><img src="{{img[0]}}" class="img-fluid"></a>
                            </div>
                            {% endfor %}
                            <br>
                            <div style="text-align:center">
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                            <div class="rating d-flex">
                                <p class="text-left mr-4">
                                    {% if details[1]!=0 %}
                                    <a href="#" class="mr-2">{{details[1]}}</a>
                                    {% else %}
                                    <a href="#" class="mr-2">5.0</a>
                                    {% endif %}
                                    {% for i in 1..(details[1]|round(0,'floor')) %}
                                    <a href="#"><span class="ion-ios-star"></span></a>
                                    {% endfor %}
                                    {% if details[1]-(details[1]|round(0,'floor')) >= 0.5 %}
                                    <a href="#"><span class="ion-ios-star-half"></span></a>
                                    {% endif %}
                                    {% for i in 1..(5-details[1]|round(0,'ceil')) %}
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    {% endfor %}
                                </p>
                            </div>
                            <h3><b>{{details[0]}}</b></h3>
                            <table>
                                <tbody>
                                    {% for ben in details[4] %}
                                    <tr>
                                        <td> <img
                                                src="https://cdn.shopify.com/s/files/1/0058/7779/2832/files/Right_Icon.png?v=1616486636"
                                                alt=""> </td>
                                        <td>&ensp;{{ben}}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table><br>
                            <div class="intro-line">
                                <p>{{details[6]}}</p>
                            </div>
                            <div class="table">
                                <table>
                                    <tbody>
                                        {% if details[11] %}
                                        <tr>
                                            <td><button class="btn btn-price" name="price">₹ <del>{{details[7]}}</del>
                                                    {{details[11]}}</button>
                                            </td>
                                        </tr>
                                        {% elseif details[12] %}
                                        <tr>
                                            <td><button class="btn btn-price" name="price">₹ <del>{{details[8]}}</del>
                                                    {{details[12]}}</button>
                                            </td>
                                        </tr>
                                        {% elseif details[13] %}
                                        <tr>
                                            <td><button class="btn btn-price" name="price">₹ <del>{{details[9]}}</del>
                                                    {{details[13]}}</button>
                                            </td>
                                        </tr>
                                        {% elseif details[14] %}
                                        <tr>
                                            <td><button class="btn btn-price" name="price">₹ <del>{{details[10]}}</del>
                                                    {{details[14]}}</button>
                                            </td>
