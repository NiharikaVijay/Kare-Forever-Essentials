{% extends "template.twig" %}

{% block title %}Admin | Product Details {% endblock %}
{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <div class="box box-body b-1 text-center no-shadow">
                            <img src={{media[0][0]}} id="product-image" class="img-fluid" alt="" />
                        </div>
                        <div class="pro-photos">
                            {% for img in media %}
                            <div class="photos-item item-active">
                                <img src={{img[0]}} alt="">
                            </div>
                            {% endfor %}
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="col-md-8 col-sm-6">
                        <h2 class="box-title mt-0">{{details[0]}}</h2>
                        <div class="list-inline">
                            {% for i in 1..(details[1]|round(0,'floor')) %}
                            <i class="fa fa-star text-warning"></i>
                            {% endfor %}
                            {% if details[1]-(details[1]|round(0,'floor')) >= 0.5 %}
                            <i class="fa fa-star-half text-warning"></i>
                            {% endif %}
                            <span class="text-muted ml-2">{{details[1]}} ({{details[2]}})</span>
                        </div>
                        <hr>


                        <!-- <div class="box"> -->
                        <div class="box-body">
                            <h4 class="box-title">Ingredients</h4>
                            <p>{{details[3]}}</p>
                            <h4 class="box-title">Benefits</h4>
                            <p>{{details[4]}}</p>
                            <h4 class="box-title">Application</h4>
                            <p>{{details[5]}}</p>
                            <h4 class="box-title">Prices</h4>
                            <div class="table-responsive">
                                <table class="table b-1">
                                    <thead class="bg-inverse">
                                        <tr>
                                            {% if details[6] %}
                                            <th>30 mL</th>
                                            {% endif %}
                                            {% if details[7] %}
                                            <th>50 mL</th>
                                            {% endif %}
                                            {% if details[8] %}
                                            <th>100 mL</th>
                                            {% endif %}
                                            {% if details[9] %}
                                            <th>250 mL</th>
                                            {% endif %}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            {% if details[6] %}
                                            <td>₹{{details[6]}}</td>
                                            {% endif %}
                                            {% if details[7] %}
                                            <td>₹{{details[7]}}</td>
                                            {% endif %}
                                            {% if details[8] %}
                                            <td>₹{{details[8]}}</td>
                                            {% endif %}
                                            {% if details[9] %}
                                            <td>₹{{details[9]}}</td>
                                            {% endif %}
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h4 class="box-title mt-40">General Info</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>Product ID</td>
                                        <td>{{details[10]}}</td>
                                    </tr>
                                    <tr>
                                        <td>Categories</td>
                                        <td>{{details[11]}}</td>
                                    </tr>
                                    <tr>
                                        <td>Concerns</td>
                                        <td>{{details[12]}}</td>
                                    </tr>
                                    <tr>
                                        <td>Orders placed</td>
                                        <td>{{details[14]}}</td>
                                    </tr>
                                    <tr>
                                        <td>Items sold</td>
                                        <td>{{details[13]}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="box bg-transparent no-shadow">
                            <div class="box-header pt-0 px-0">
                                <h4 class="box-title">
                                    Customer Review
                                </h4>
                            </div>
                            <div class="box-body px-0">
                                <div class="review-slider owl-carousel">
                                    {% for review in reviews %}
                                    <div class="box box-solid bg-primary box-outline-primary">
                                        <div class="box-header">
                                            <h4 class="box-title"><strong>{{review[0]}}</strong></h4>

                                            <div class="d-flex text-warning align-items-center">
                                                {% for i in 1..(review[1]) %}
                                                <i class="fa fa-star"></i>
                                                {% endfor %}
                                                <span class="text-fade ml-10">{{review[1]}}</span>
                                            </div>
                                        </div>

                                        <div class="box-body">
                                            {{review[2]}}
                                        </div>
                                    </div>
                                    {% endfor %}


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}